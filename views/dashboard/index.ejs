<script>
    var amount = 1;
    var base = 'ETH';
    function changeBase(newBase) {
        document.getElementById("token-base-type").innerHTML = newBase
        base = newBase
        cal()
    }

    function changeAmount() {
        console.log(document.getElementById("token-base-amount").value);
        amount = parseFloat(document.getElementById("token-base-amount").value)
        cal()
    }
    cal();
    function cal() {
        let rate = 1;
        switch (base) {
            case 'BTC':
                rate = document.getElementById("BTCSQG").value
                break;
            case 'BNB':
                rate = document.getElementById("BNBSQG").value
                break;
                break;
            case 'ETH':
                rate = document.getElementById("ETHSQG").value
                break;
            default:
                rate = document.getElementById("SQG").value
                break;
        }
        rate = parseFloat(rate);
        let result = amount * rate
        console.log(`BASE: ${base} || RATE: ${rate} || AMOUNT: ${amount}  = ${result}`);
        document.getElementById("change-result").innerHTML = Number.parseFloat(result).toFixed(2)
    }
</script>